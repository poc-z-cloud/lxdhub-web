{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "noLib": false,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "lib": [
            "es2017",
            "dom"
        ],
        "outDir": "../lib/server/"
    },
    "exclude": [
      "**/node_modules",
      "**/lib",
      "**/*.spec.ts",
      "src",
      "set-env.ts"
    ]
}
